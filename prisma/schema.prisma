generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// DONNÉES STUDIO GHIBLI (depuis l'API)
// ============================================

model Film {
  id            String  @id @default(uuid())
  ghibliId      String  @unique
  title         String
  originalTitle String  @map("original_title")
  description   String  @db.Text
  director      String
  producer      String
  releaseDate   String  @map("release_date")
  runningTime   String  @map("running_time")
  rtScore       String  @map("rt_score")
  image         String?

  people      Person[]
  favorites   Favorite[]
  watchlist   Watchlist[]
  watched     Watched[]
  reviews     Review[]
  collections CollectionFilm[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("films")
}

model Person {
  id        String  @id @default(uuid())
  ghibliId  String  @unique
  name      String
  gender    String?
  age       String?
  eyeColor  String? @map("eye_color")
  hairColor String? @map("hair_color")

  films Film[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("people")
}

// ============================================
// GESTION UTILISATEURS (NextAuth compatible)
// ============================================

model User {
  id            String    @id @default(uuid())
  name          String?
  email         String    @unique
  emailVerified DateTime? @map("email_verified")
  password      String?
  image         String?
  role          Role      @default(USER)

  accounts    Account[]
  sessions    Session[]
  favorites   Favorite[]
  watchlist   Watchlist[]
  watched     Watched[]
  reviews     Review[]
  collections Collection[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("users")
}

// NextAuth required models
model Account {
  id                String  @id @default(uuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

enum Role {
  USER
  ADMIN
}

// ============================================
// FONCTIONNALITÉS UTILISATEUR
// ============================================

model Favorite {
  id     String @id @default(uuid())
  userId String @map("user_id")
  filmId String @map("film_id")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  film Film @relation(fields: [filmId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now()) @map("created_at")

  @@unique([userId, filmId])
  @@map("favorites")
}

model Watchlist {
  id     String @id @default(uuid())
  userId String @map("user_id")
  filmId String @map("film_id")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  film Film @relation(fields: [filmId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now()) @map("created_at")

  @@unique([userId, filmId])
  @@map("watchlist")
}

model Watched {
  id     String @id @default(uuid())
  userId String @map("user_id")
  filmId String @map("film_id")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  film Film @relation(fields: [filmId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now()) @map("created_at")

  @@unique([userId, filmId])
  @@map("watched")
}

model Review {
  id      String  @id @default(uuid())
  userId  String  @map("user_id")
  filmId  String  @map("film_id")
  rating  Int
  comment String? @db.Text

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  film Film @relation(fields: [filmId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@unique([userId, filmId])
  @@map("reviews")
}

model Collection {
  id          String  @id @default(uuid())
  userId      String  @map("user_id")
  name        String
  description String? @db.Text

  user  User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  films CollectionFilm[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("collections")
}

model CollectionFilm {
  id           String @id @default(uuid())
  collectionId String @map("collection_id")
  filmId       String @map("film_id")

  collection Collection @relation(fields: [collectionId], references: [id], onDelete: Cascade)
  film       Film       @relation(fields: [filmId], references: [id], onDelete: Cascade)

  addedAt DateTime @default(now()) @map("added_at")

  @@unique([collectionId, filmId])
  @@map("collection_films")
}
